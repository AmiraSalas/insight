FROM node:22-slim

WORKDIR /app

ENV NODE_ENV=production

# Install deps
COPY package.json package-lock.json ./
RUN npm ci

# Copy source
COPY . .

# Build frontend + backend
RUN npm run build

# Fly listens on this
ENV PORT=3000
EXPOSE 3000

# Start compiled JS ONLY
CMD ["node", "dist/index.js"]


